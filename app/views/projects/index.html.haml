.main-panel
  .row
    .col-md-8.col-xs-8.col-xs-12
    .col-md-4.col-sm-4.col-xs-12.form-group.pull-right.top_search
      %form
        .input-group
          %input.form-control{:placeholder => "Search for...", :type => "text"}/
          %span.input-group-btn
            %button.btn.btn-default{:type => "button"} Go!
.x_panel
  .x_content
    .tabsarea{"data-example-id" => "togglable-tabs", :role => "tabpanel"}
      %button.btn-new-project.btn.btn-success{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal", :type => "button"} + New Project
      %ul#myTab.nav.nav-tabs.bar_tabs{:role => "tablist"}
        - @sub_cats.each_with_index do |sub_cat, index|
          %li{:role => "presentation", :class => @active_tabe[index]}
            %a{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#tab_content"+index.to_s, :role => "tab"}
              = sub_cat.name.capitalize+" Projects"
    
    #myTabContent.tab-content
      - @sub_cats.each_with_index do |sub_cat, index|
        .tab-pane.fade.in{:role => "tabpanel", :id =>"tab_content"+index.to_s, :class => @active_tabe[index]}
          .row
            - sub_cat.projects.each do |project|
              .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-12
                %a.tile-stats.project-holder{:href => project_path(project.id)}
                  .contact-widget
                    %span.col-xs-6
                      %i.fa.fa-caret-square-o-right
                      %strong.title= project.project_name.capitalize
                    %span.col-xs-6.text-right
                      %i.fa.fa-cog
                  %span.widget-footer
                    .col-xs-12.text-right
                      %span
                        0
                        %i.fa.fa-map-marker{"aria-hidden" => "true"}
                      %span
                        0
                        %i.fa.fa-user
                      %span
                        0
                        %i.fa.fa-picture-o{"aria-hidden" => "true"}

            .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-12
              %a.new-project.pointer.project-box{:href => new_project_path}
                + New Project

      - if @sub_cats.blank?
        .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-12
          %a.new-project.pointer.project-box{:href => "#"}
            + New Project Sub Category
